<%- include('include/header') %>

<div class="container py-md-5 container--narrow">
  <%- include('include/flash') %> <%- include('include/profile-header') %>

  <% if (friends && friends.length > 0) { %>
    <div class="row">
      <% friends.forEach(function(friend) { %>
      <div class="col-md-4 col-sm-6 mb-4">
        <div class="card h-100">
          <div class="card-body text-center">
            <a href="/profile/<%= friend.username %>">
              <img src="<%= friend.avatar %>" class="rounded-circle mb-3" style="width: 100px; height: 100px; object-fit: cover;" alt="<%= friend.username %>">
            </a>
            <h5 class="card-title">
              <a href="/profile/<%= friend.username %>"><%= friend.username %></a>
            </h5>
            <p class="text-muted small">
              Найз болсон: <%= friend.acceptedDate.toLocaleDateString() %>
            </p>
            <% if (user && user.username === profileUsername) { %>
              <div class="btn-group-vertical btn-group-sm w-100" role="group">
                <a href="/profile/<%= friend.username %>" class="btn btn-info">
                  <i class="fas fa-user"></i> Профайл үзэх
                </a>
                <button class="btn btn-success start-chat-btn" data-username="<%= friend.username %>" data-userid="<%= friend._id %>">
                  <i class="fas fa-comment"></i> Чат эхлүүлэх
                </button>
              </div>
            <% } else { %>
              <a href="/profile/<%= friend.username %>" class="btn btn-info btn-sm">
                <i class="fas fa-user"></i> Профайл үзэх
              </a>
            <% } %>
          </div>
        </div>
      </div>
      <% }) %>
    </div>
  <% } else { %>
    <div class="text-center py-5">
      <i class="fas fa-user-friends fa-4x text-muted mb-3"></i>
      <h3 class="text-muted">Одоогоор найз байхгүй байна</h3>
      <% if (user && user.username === profileUsername) { %>
        <p class="text-muted">
          Хэрэглэгчдийн профайл хандаж найз нэмээрэй!
        </p>
      <% } %>
    </div>
  <% } %>
</div>

<%- include('include/footer') %>
